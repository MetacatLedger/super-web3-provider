{
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "declaration": true,
        "noImplicitAny": true,
        "moduleResolution": "node",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        // "sourceMap": true,
        "outDir": "./lib",
        "baseUrl": ".",
        "paths": {
            "*": [
                "node_modules/*"
            ]
        },
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "esModuleInterop": true
    },
    "include": [
        "src/**/*.ts"
    ]
}